# Application Configuration
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/car_rental
DB_USERNAME=postgres
DB_PASSWORD=your-postgresql-password

# JWT Configuration
JWT_SECRET=your-secure-secret-key-here-minimum-256-bits
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

EXCHANGE_RATE_API_KEY=your-api-key-here

# OAuth2 Configuration
APP_BASE_URL=http://localhost:8082

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth2 State Secret (for CSRF protection)
OAUTH2_STATE_SECRET=your-secure-state-secret-minimum-32-chars

# Stripe Configuration
STRIPE_API_KEY=sk_test_your-stripe-api-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration
EMAIL_FROM=noreply@rentacar.com
EMAIL_ENABLED=true

# SendGrid SMTP (Production only - leave empty for development)
SENDGRID_HOST=smtp.sendgrid.net
SENDGRID_PORT=587
SENDGRID_USERNAME=apikey
SENDGRID_API_KEY=your-sendgrid-api-key

# Cloudflare R2 Configuration (Production only - leave empty for development)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=your-bucket-name
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# JVM Options (Docker only - ignored when running with Maven)
# Uncomment and adjust based on your container memory:
# JAVA_OPTS=-Xmx400m -Xms256m   # 512MB container (Railway free)
# JAVA_OPTS=-Xmx768m -Xms512m   # 1GB container
# JAVA_OPTS=-Xmx1536m -Xms512m  # 2GB container